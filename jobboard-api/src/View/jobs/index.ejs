<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Offres d'emploi</title>
</head>
<body>
  <h1>Liste des offres d'emploi</h1>
  <a href="/jobs/add">➕ Ajouter un job</a>
  <table border="1" cellpadding="10">
    <tr>
      <th>ID</th>
      <th>Titre</th>
      <th>Localisation</th>
      <th>Salaire</th>
      <th>Entreprise</th>
      <th>Actions</th>
    </tr>
    <% jobs.forEach(job => { %>
      <tr>
        <td><%= job.id %></td>
        <td><%= job.title %></td>
        <td><%= job.location %></td>
        <td><%= job.salary %></td>
        <td><%= job.company_name %></td>
        <td>
          <a href="/jobs/edit/<%= job.id %>">✏️ Modifier</a> |
          <form action="/jobs/delete/<%= job.id %>" method="POST" style="display:inline;">
            <button type="submit">🗑 Supprimer</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
